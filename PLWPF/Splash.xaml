<Window x:Class="PLWPF.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="Splash" Height="600" Width="800" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen" Icon="images/icon.png">
    <Window.Background>
        <ImageBrush ImageSource="images/project_splash_screen.png"/>
    </Window.Background>
    <Grid MouseLeftButtonDown="move">
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <ProgressBar HorizontalAlignment="Left" Height="12" Margin="0,189,0,0" VerticalAlignment="Top" Width="800" FlowDirection="LeftToRight" IsIndeterminate="True" Background="#33E6E6E6" BorderBrush="#00BCBCBC" >
            <ProgressBar.Foreground>
                <ImageBrush ImageSource="images/bar.png"/>
            </ProgressBar.Foreground>
        </ProgressBar>
        <Label x:Name="label" Content="Loading..." HorizontalAlignment="Left" Margin="4,164,0,0" VerticalAlignment="Top" Width="76" Foreground="#FF5DFF00"/>
    </Grid>
</Window>
