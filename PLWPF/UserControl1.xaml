<UserControl x:Class="PLWPF.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             mc:Ignorable="d">
  
    <StackPanel Orientation="Horizontal" >

        <Button x:Name="cmdDown" Margin="1" Content="˅" Click="cmdDown_Click" />
        <TextBox x:Name="textNumber" Margin="1" Width="50"  TextChanged="txtNum_TextChanged" Text="{Binding Path=MyProperty ,Mode=TwoWay,ValidatesOnDataErrors=True,ValidatesOnExceptions=True,NotifyOnValidationError=True}"/>
        <Button x:Name="cmdUp" Margin="1" Content="˄" Click="cmdUp_Click" />
    </StackPanel>
</UserControl>
